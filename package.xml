     </file>
    </dir> <!-- /data -->
    <dir name="docs">
     <file role="doc" name="LICENSE" install-as="LICENSE">
      <replace from="@package_version@" to="version" type="package-info"/>
     </file>
    </dir> <!-- /docs -->
    <dir name="Piece">
     <dir name="Right">
      <dir name="Config">
       <file role="php" name="Factory.php">
        <replace from="@package_version@" to="version" type="package-info"/>
       </file>
      </dir> <!-- /Piece/Right/Config -->
      <dir name="Validator">
       <file role="php" name="Common.php">
        <replace from="@package_version@" to="version" type="package-info"/>
       </file>
