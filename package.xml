        <replace from="@package_version@" to="version" type="package-info"/>
       </file>
       <file role="test" name="ValidationErrorTestCase.php" install-as="Piece/Right/ValidationErrorTestCase.php">
        <replace from="@package_version@" to="version" type="package-info"/>
       </file>
      </dir> <!-- /tests/Piece/Right -->
      <file role="test" name="RightTestCase.php" install-as="Piece/RightTestCase.php">
       <replace from="@package_version@" to="version" type="package-info"/>
      </file>
      <file role="test" name="TestRunner.php" install-as="Piece/TestRunner.php">
       <replace from="@package_version@" to="version" type="package-info"/>
      </file>
     </dir> <!-- /tests/Piece -->
     <file role="test" name="AllTestRunner.php" install-as="AllTestRunner.php">
      <replace from="@package_version@" to="version" type="package-info"/>
     </file>
    </dir> <!-- /tests -->
   </dir> <!-- / -->
  </filelist>
 </release>
