        </file>
        <file role="test" name="RequiredTestCase.php" install-as="Piece/Right/Validator/RequiredTestCase.php">
         <replace from="@package_version@" to="version" type="package-info"/>
        </file>
        <file role="test" name="TestRunner.php" install-as="Piece/Right/Validator/TestRunner.php">
         <replace from="@package_version@" to="version" type="package-info"/>
        </file>
       </dir> <!-- /tests/Piece/Right/Validator -->
       <file role="test" name="ConfigTestCase.php" install-as="Piece/Right/ConfigTestCase.php">
        <replace from="@package_version@" to="version" type="package-info"/>
