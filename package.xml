        <replace from="@package_version@" to="version" type="package-info"/>
       </file>
       <file role="php" name="Length.php">
        <replace from="@package_version@" to="version" type="package-info"/>
       </file>
       <file role="php" name="Range.php">
        <replace from="@package_version@" to="version" type="package-info"/>
       </file>
       <file role="php" name="Regex.php">
        <replace from="@package_version@" to="version" type="package-info"/>
       </file>
       <file role="php" name="Required.php">
        <replace from="@package_version@" to="version" type="package-info"/>
       </file>
      </dir> <!-- /Piece/Right/Validator -->
      <file role="php" name="Config.php">
       <replace from="@package_version@" to="version" type="package-info"/>
      </file>
      <file role="php" name="Error.php">
       <replace from="@package_version@" to="version" type="package-info"/>
      </file>
      <file role="php" name="Results.php">
       <replace from="@package_version@" to="version" type="package-info"/>
      </file>
      <file role="php" name="ValidationError.php">
       <replace from="@package_version@" to="version" type="package-info"/>
      </file>
     </dir> <!-- /Piece/Right -->
     <file role="php" name="Right.php">
      <replace from="@package_version@" to="version" type="package-info"/>
     </file>
    </dir> <!-- /Piece -->
    <dir name="tests">
     <dir name="Piece">
      <dir name="Right">
       <dir name="Config">
        <file role="test" name="FactoryTestCase.php" install-as="Piece/Right/Config/FactoryTestCase.php">
         <replace from="@package_version@" to="version" type="package-info"/>
        </file>
        <file role="test" name="TestRunner.php" install-as="Piece/Right/Config/TestRunner.php">
         <replace from="@package_version@" to="version" type="package-info"/>
        </file>
       </dir> <!-- /tests/Piece/Right/Config -->
       <dir name="Validator">
        <file role="test" name="Bar.php" install-as="Piece/Right/Validator/Bar.php">
         <replace from="@package_version@" to="version" type="package-info"/>
        </file>
        <file role="test" name="FactoryTestCase.php" install-as="Piece/Right/Validator/FactoryTestCase.php">
